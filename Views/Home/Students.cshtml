@model IEnumerable<SharpCodeAssignmentOne.Models.StudentInfo>

@{
    ViewData["Title"] = "Index";
}

<h1>Students</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               First Name
            </th>
            <th>
              Last Name
            </th>
            <th>
                Gender
            </th>
            <th>
                Age
            </th>
            <th>
                Class
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentInfoFirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentInfoLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentInfoSex)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentInfoAge)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentInfoClass)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StudentInfoID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.StudentInfoID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.StudentInfoID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
